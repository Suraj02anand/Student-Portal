    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/82c4b53bff.js"
      crossorigin="anonymous"
    ></script>

    <!-- (Optional) Use CSS or JS implementation -->
