  <% let postedNotificationId = postedNotification._id; %>
<% let postedYear  =  postedNotification.year  %>
<% let postedDepartment = postedNotification.department %>

  <form action="/teacher/updatePostedNotification" method="post">
    <input type="hidden" name="id" value="<%= postedNotificationId %>" /  >
    <div class="container">
      <div class="row mt-5">
        <div class="col-md-12">
          <div class="form-group">
            <label for="Notification Title" class="form-label h5"
              >Notification Title</label
            >
            <input
              type="text"
              name="notificationTitle"
              class="form-control shadow"
              value="<%= postedNotification.notificationTitle %>"
              required
            />
          </div>
        </div>
      </div>
  
      <div class="row mt-5">
        <div class="col-12">
          <label for="" class="form-label h5">Notification Message</label>
        </div>
        <div class="p-2">
          <textarea name="notificationMessage" id="" cols="10"  rows="5" class="form-control shadow" required><%= postedNotification.notificationMessage %></textarea>
        </div>
      </div>
  
      
  
      <div class="row mt-5 mx-auto justify-content-center">
        <div class="col-3">
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="year"
              id="1"
              value="1"
              <% if( postedYear === 1 ) { %>
                checked 
              <% } %>

            />
            <label class="form-check-label" for=""> 1st Year </label>
          </div>
        </div>
        <div class="col-3">
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="year"
              id="2"
              value="2"
              <% if( postedYear === 2 ) { %>
                checked 
              <% } %>
            />
            <label class="form-check-label" for=""> 2nd Year </label>
          </div>
        </div>
        <div class="col-3">
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="year"
              id="3"
              value="3"
              <% if( postedYear === 3 ) { %>
                checked 
              <% } %>
            />
            <label class="form-check-label" for=""> 3rd Year </label>
          </div>
        </div>
        <div class="col-3">
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="year"
              id="0"
              value="0"
              <% if( postedYear === 0 ) { %>
                checked 
              <% } %>
            />
            <label class="form-check-label" for=""> For All</label>
          </div>
        </div>
      </div>

      <div class="row mt-5 mx-auto justify-content-center">
      <% postedStaffDetails.departmentHandled.forEach((e) => { %>
        <div class="col-auto">
          <div class="form-check ms-auto mx-4">
            <input type="radio" class="form-check-input" name="department"  id="2" value="<%= e %>" 
            <% if( postedDepartment === e ) { %>
              checked 
            <% } %>
            />
            <label class="form-check-label" for=""> <%= e %></label>
          </div>
        </div>
          <% }) %>
         </div>
      
  
      <div class="row mt-4">
        <div class="form-group">
          <input
            type="submit"
            value="Update Notification"
            class="btn btn-outline-info mt-4 mx-auto d-flex justify-content-center flex-nowrap"
          />
        </div>
      </div>
    </div>
  </form>

  

