<!doctype html>
<html lang="en">
  <head>
    <title>Post Material</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.0.2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  </head>

  <body>
      
      <nav class="navbar bg-dark navbar-dark navbar-expand">
        <div class="container-fluid">
        <a href="#" class="navbar-brand mx-2">Post Material</a>
        <ul class="navbar-nav ">
            <li class="nav-item mx-3">
                <a href="/teacher/postedMaterial" class="nav-link">Posted Materials</a>
            </li>
            <li class="nav-item mx-3">
                <a href="" class="nav-link">Home</a>
            </li>
        </ul>
        </div>
      </nav>


    <form action="/teacher/material" method="post" enctype="multipart/form-data">

        <input type="text" name="subject" id="" placeholder="Enter Subject Name" class="form-control m-4 border-primary" required>
        <input type="text" name="title" id="" placeholder="Enter Material Title" class="form-control m-4 border-danger" required>

        <select name="dept" id="" class="form-control m-4 border-warning">
          <%  dept.forEach((e) => { %>
            <option value="<%= e %>"><%= e %></option>
          <%  }) %>  
        </select>

        <select name="year" id="" class="form-control m-4 border-success">
          <option value="1">1st Year</option>
          <option value="2">2nd Year</option>
          <option value="3">3rd Year</option>
        </select>

        <input type="file" name="material" id="" class="form-control m-4 border-info" required>
      
      <div class="col d-flex">
          <input type="submit" value="Upload" class="btn btn-primary btn-lg mx-auto rounded-pill" >
      </div>
    </form>

   <div class="d-flex">
    <h4 class="mx-auto mt-5">
      <%= message %>
    </h4>
  </div>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>