<!doctype html>
<html lang="en">
  <head>
    <title>Download Material</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.0.2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  </head>

  <body>
      
      <nav class="navbar bg-dark navbar-dark navbar-expand">
        <div class="container-fluid">
        <a href="#" class="navbar-brand mx-2">Download Materials</a>
        <ul class="navbar-nav ">
            <li class="nav-item mx-3">
                <a href="" class="nav-link">Home</a>
            </li>
        </ul>
        </div>
    </nav>

    <% data.forEach((e) => { %>
      
      <div class="single-item mt-3">
        <form action="/student/material" method="post">
        <input type="hidden" name="id" value="<%= e._id %>">
        <div class="card bg-secondary text-light shadow">
          <div class="card-header d-flex">
            <p class="mx-auto h5"><%= e.subject %></p>
          </div>
          <div class="card-body">
            <p class="h5 text-center">
              Material Title : <%= e.title %>
            </p>
            <div class="d-flex mt-5">
            <p class="h5">Posted By: <%= e.postedStaff %></p>
            <p class="h6 ms-auto">Posted On : <%= e.postedTime.toLocaleString("en-US") %></p>
          </div>
          </div>
          <div class="card-footer d-flex">
            <input type="submit" value="Download" class="btn btn-success mx-auto"></input>
          </div>
        </div>
        
      </form>
    </div>
    <% }) %>
    


    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>