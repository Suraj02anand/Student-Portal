<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.0.2 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <style>
    table,
    tr,
    th {
      border: 1px solid black;
    }
  </style>

  <body>
    <% let subjectCount = details.subjects; %> <% let semester =
    details.semester; %> <% let department = details.department; %> <% let year
    = details.year; %>

    <div class="mt-5"></div>
    <form action="/admin/generate-table-2" method="post">
      <div class="container">
        <div class="row">
          <div class="col-auto d-flex mx-auto">
            <h3><%= semester + " Semester" %></h3>
          </div>
        </div>
        <div class="row">
          <div class="col-auto d-flex mx-auto">
            <h4><%= "For " + department + " department" %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-auto d-flex mx-auto">
            <h5><%= year + " year" %></h5>
          </div>
        </div>

        <% for(let i = 1 ; i <= subjectCount ; i++) { %>
        <div class="row mt-4">
          <div class="col-12">
            <input
              type="text"
              name="subject"
              class="form-control text-center"
              placeholder="<%= 'Enter Subject ' + i + ' Name' %>"
              required
            />
          </div>
        </div>
        <% } %>

        <div class="row">
          <div class="col-auto d-flex mx-auto">
            <input
              type="submit"
              value="Generate Table"
              class="btn btn-outline-dark mt-4"
            />
          </div>
        </div>
      </div>
    </form>
    <!-- Bootstrap JavaScript Libraries -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
